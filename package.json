{
  "name": "resumer-helper-desktop",
  "version": "1.0.0",
  "description": "ResumerHelper - JD简历匹配分析桌面工具",
  "main": "dist/main/main.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "homepage": "./",
  "author": "ResumerHelper Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"NODE_ENV=development npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js --dev",
    "dev:renderer": "vite --port 3000",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "esbuild src/preload/preload.ts --bundle --platform=node --target=node18 --outdir=dist/preload --external:electron",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "electron-rebuild": "node scripts/electron-rebuild.js",
    "postinstall": "npm run electron-rebuild",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": [
    "resume",
    "job-description",
    "matching-analysis",
    "electron",
    "desktop-app",
    "ai",
    "typescript"
  ],
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "axios": "^1.7.7",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.5",
    "electron-is-dev": "^3.0.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-jwt": "^4.0.4",
    "mammoth": "^1.8.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.5",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "antd": "^5.22.2",
    "bcryptjs": "^3.0.3",
    "concurrently": "^9.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vite": "^6.0.7",
    "zustand": "^5.0.1"
  },
  "build": {
    "appId": "com.resumerhelper.desktop",
    "productName": "ResumerHelper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "nodeGypRebuild": true,
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
